<?xml version="1.0" encoding="utf-8"?>
<game name="daytona" rom="daytona">
  <layouts>
    <layout type="default" joystickcolor="Black">
      <button type="P1_PEDAL" tag=":ACCEL" mask="255" defvalue="0" x="30" y="60" color="Blue" function="Accelerate">
        <mapping type="standard" name="JOY_r2" />
